@model IEnumerable<AMC2.Models.session_Details>

@{
    ViewBag.Title = "Index";
}
<head>
    <style>
        h2.welcome {
            text-align: center;
        }
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/style")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Attendence Marking for Classroom", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>


                    @if (User.Identity.IsAuthenticated)
                    {

                        <li>@Html.ActionLink("Session", "Index", "Session")</li>
                        <li>@Html.ActionLink("Trainer", "Index", "Trainer")</li>
                        <li>@Html.ActionLink("Skill Set", "Index", "Skillsets")</li>
                        <li>@Html.ActionLink("Enroll", "Index", "Enrolls")</li>
                        <li>@Html.ActionLink("Mark Attendence", "Attendence", "Marks")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <h2 class="welcome">Welcome @User.Identity.Name </h2>
    <h2>Session Report </h2>
</body>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    @if (@TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            <strong>Success!</strong> @TempData["AlertMessage"]
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>@*x*@
            </button>
        </div>
    }
    <table class="table">
        <tr>
            @*<th>
            <label>Selection</label>
        </th>*@
            <th>
                <label>Session ID</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session_Des)
            </th>
            <th>
                <label>Date</label>
            </th>
            <th>
                <label>Time</label>
            </th>
            <th>
                <label>Slots</label>
            </th>
            <th>
                <label>Skill</label>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Session_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Session_Des)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Session_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Session_Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available_Slots)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.skillset.Skill_Type)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Session_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Session_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Session_Id })
            </td>
    </tr>
        }

    </table>
