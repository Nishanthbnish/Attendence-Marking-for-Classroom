@model AMC2.Models.userreg

@{
    ViewBag.Title = "Signup";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/css/StyleSheet1.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    <link href="~/Content/Login/Style.css" rel="stylesheet" />


</head>
<header class="header">
    <nav class="navbar navbar-expand-lg fixed-top py-3">
        <div class="container">
            <a href="#" class="navbar-brand text-uppercase font-weight-bold">Attendence Marking for Classroom</a>
            <button type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler navbar-toggler-right"><i class="fa fa-bars"></i></button>

            <div id="navbarSupportedContent" class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link text-uppercase font-weight-bold" })
                    </li>

                    <li class="nav-item">

                    <li class="dropdown">
                        <a class="nav-link dropdown-toggle text-uppercase font-weight-bold" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Registration
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown" role="menu">

                            <li">@Html.ActionLink("User", "Signup", "Account", new { area = "" }, new { @class = "dropdown-item text-uppercase font-weight-bold" })
                    </li>
                    <li>@Html.ActionLink("Admin", "Asignup", "Account", new { area = "" }, new { @class = "dropdown-item text-uppercase font-weight-bold" })</li>
                </ul>
                </li>
                </li>
                <li class="nav-item">

                <li class="dropdown">
                    <a class="nav-link dropdown-toggle text-uppercase font-weight-bold" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Login
                    </a>
                    <ul class="dropdown-menu" role="menu">

                        <li>@Html.ActionLink("User", "login", "Account", new { area = "" }, new { @class = "dropdown-item text-uppercase font-weight-bold" })</li>
                        <li>@Html.ActionLink("Admin", "Alogin", "Account", new { area = "" }, new { @class = "dropdown-item text-uppercase font-weight-bold" })</li>
                    </ul>
                </li>
                </li>

                <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link text-uppercase font-weight-bold" })</li>

                </ul>
            </div>
        </div>
    </nav>
</header>


<body>
    <div class="main">
        <input type="checkbox" id="chk" aria-hidden="true">

        <div class="signup">
            <form action="/Account/Signup" method="post">
                <label for="chk" aria-hidden="true">Sign up</label>
                <input type="text" id="firstname" name="FirstName" placeholder="User name" required="">
                <input type="text" id="lastname" name="LastName" placeholder="Last name" required="">
                <input type="email" id="email" name="Email" placeholder="Email" required="">
                <input type="password" name="Password" placeholder="Password" required="">
                <input type="password" name="Confirm" placeholder="Confirm Password" required="">
                <button type="submit">Sign in</button>
                <button><a href="/Account/Login"> click to Login</a></button>

            </form>
        </div>


    </div>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
